<h1><%= @user.name%>'s Posts</h1>
   <div class="user-container">
        <div class="user-img">
            <img src="<%= @user.photo %>" width="100%"  height = "100%">
        </div>
        <div class="user-info">
            <h2><%= @user.name %></h2>
            <h2>Number of posts: <%= @user.post_counter %></h2>
        </div>
     </div>

</div>
<div class="post-container">
    <% @posts.each do |post|%>
    <%= link_to user_post_path(user_id: post.author_id, id: post.id) do%>
          <div class="post-card" style="border: 1px solid black; margin:10px; padding:10px ">
                <h2><%= post.title %></h2>
                <p><%= post.text %></p>
                <div class="reactions">
                    <button>Comments <%== post.comment_counter%> </button>
                    <button>Likes <%== post.like_counter%> </button>
                </div>
            </div>
            <div class="comment-container">
                <% post.recent_comments.each do |comment|%>
                    <%= comment.user.name%> : <%= comment.text%>
                <% end %>
            </div>
        <% end %>
    <% end %>
</div>
