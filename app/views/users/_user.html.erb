 <%= link_to user do%>
 <li class="user-card" style="border:1px solid black;">
    <div class="user-img">
        <img src="<%= user.photo %>" width="100%"  height = "100%">
    </div>
    <div class="user-info">
        <h2><%= user.name %></h2>
        <h2>Number of posts: <%= user.post_counter %></h2>
    </div>
 </li>
 <% end %>