 <%= link_to user do%>
 <li class="user-card" >
    <div class="user-img">
        <img src=<%= user.photo %> width="300px"  height = "100%">
    </div>
    <div class="user-info">
        <h2><%= user.name %></h2>
        <h2 class="post-counter">Number of posts: <%= user.post_counter %></h2>
    </div>
 </li>
 <% end %>