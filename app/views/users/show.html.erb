 <section class="user-section my-10 w-[60%] mx-auto">
    <div class="user-card  flex justify-center" >
        <div class="user-img">
            <img src=<%= @user.photo %>  class="user-photo rounded-full w-[120px] h-[120px]">
        </div>
        <div class="user-info bg-gray-200 border-2 w-[600px]  rounded-md  px-5  hover:bg-gray-400">
            <h2 class="font-bold text-2xl"><%= @user.name %></h2>
            <h2 class="post-counter font-semibold text-sm text-gray-400">Number of posts: <%= @user.post_counter %></h2>
        </div>
    </div>

     <div class="bio-container  border-2 rounded-md mt-5 ">
        <h2 class="bg-gray-200 px-3 py-2 font-bold text-md">Bio</h2>
        <p class="text-xs px-3 py-3 text-gray-800 font-semibold capitalize"><%=  @user.bio%></p>
     </div>
 </section>
 <section class="post-section w-[70%] mx-auto my-20">
    <div class="post-container  flex justify-center flex-wrap">
        <% @user.recent_posts.each do |post|%>
            <%= link_to user_post_path(user_id: post.author_id, id: post.id) do%>
                <div class="post-card bg-gray-200 border-2 my-5  rounded-md w-[700px]  hover:bg-gray-400">
                    <h2 class=" font-semibold text-lg bg-black/80 text-white px-3 py-1"><%= post.title %></h2>
                    <p class="line-clamp-2 px-2 py-1 text-sm"><%= post.text %></p>
                    <div class="reactions p-4">
                        <span class="font-semibold text-sm">Comments: <%== post.comment_counter%> </span>
                        <span class="font-semibold text-sm">Likes: <%== post.like_counter%> </span>
                    </div>
                </div>
            <% end %>
        <% end%>
    </div>
    <div class="flex justify-center">
        <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "all-post bg-black text-white border-2 w-[150px]  p-1 rounded-md" %>
    </div>
 </section>
